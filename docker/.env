# Ubuntu version
UBUNTU_VERSION=24.04

# Database configuration
DB_HOST=postgres
DB_USER=thales
DB_PASSWORD=thales
DB_NAME=thales
DB_PORT=5432

# Interactive Brokers configuration
HOST_IP=host.docker.internal
IB_GATEWAY_PORT=4001
IB_CLIENT_ID=1

# Application configuration
LOG_LEVEL=INFO

# Resource limits (for docker-compose)
THALES_CPU_LIMIT=4
THALES_MEM_LIMIT=8G
THALES_CPU_RESERVATION=2
THALES_MEM_RESERVATION=4G
DB_CPU_LIMIT=2
DB_MEM_LIMIT=4G
DB_CPU_RESERVATION=1
DB_MEM_RESERVATION=2G

# Health check configuration
POSTGRES_MAX_RETRIES=30
POSTGRES_RETRY_INTERVAL=2
